<div class="text-center text-4xl py-6">
  <h1>
    Welcome to the Signup/ Login Page!
  </h1>
</div>
<div class="row justify-space-between-md">
  <div class="col-md-6 container mx-auto text-center border-solid bg-teal-500 p-6 shrink w-64 h-14 rounded-2xl">
    <h2 class="pb-1 text-xl">Login</h2>

    <form class="form login-form">
      <div class="form-group ">
        <label for="email-login">email:</label>
        <input class="form-input rounded" type="text" id="email-login" />
      </div>
      <div class="form-group pb-4">
        <label for="password-login">password:</label>
        <input class="form-input rounded" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary border-none p-3 bg-blue-600 rounded px-4 py-2 text-white " type="submit">login</button>
      </div>
    </form>
  </div>
  </br>
  <div class="col-md-6 mx-auto container text-center bg-teal-300 p-6 w-64 h-14 rounded-2xl">
    <h2 class="pb-1 text-xl">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input rounded" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input rounded" type="text" id="email-signup" />
      </div>
      <div class="form-group pb-4">
        <label for="password-signup">password:</label>
        <input class="form-input rounded" type="password" id="password-signup" />
      </div>
      <div class="form-group pb-4">
        <button class="btn btn-primary border-none p-3 bg-blue-600 rounded px-4 py-2 text-white" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
